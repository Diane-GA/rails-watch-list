<div class="banner">
  <h1><%= @list.name %></h1>
</div>

<%# afficher les bookmark liés au film %>
<div>
  <ul class="d-flex flex-wrap">
    <% @bookmarks.each do |bookmark| %>
      <li class="card m-3 bookmark-card">
        <div>
          <%= image_tag bookmark.movie.poster_url, alt: "movie poster" %>
        </div>
        <div class="m-2 p-1">
          <h4><%= bookmark.movie.title %></h4>
          <p><%= bookmark.movie.overview %></p>
          <p><%= bookmark.movie.rating %>/10</p>
          <p><%= bookmark.comment %></p>

          <%= link_to "Delete", bookmark_path(bookmark.id), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>

        </div>
      </li>
      <% end %>
  </ul>
</div>

<%# proposer la création d'un bookmark %>
<div class="container m-3 p-3">
  <%= link_to "+ Add a bookmark",  new_list_bookmark_path(@list[:id]), class: "btn btn-info" %>
</div>
