<div class="banner">
  <h1><%= @list.name %></h1>
</div>

<%# afficher les bookmark liés au film %>
<div>
  <ul>
    <% @bookmarks.each do |bookmark| %>
      <li class="card p-3 m-3">
        <div>
          <%# <%= image_tag bookmark.movie.poster_url, alt: "movie poster" %>
        </div>
        <div>
          <h4><%= bookmark.movie.title %></h4>
          <p><%= bookmark.movie.overview %></p>
          <p><%= bookmark.movie.rating %></p>
          <p><%= bookmark.comment %></p>
        </div>
      </li>
      <% end %>
  </ul>
</div>

<%# proposer la création d'un bookmark %>
<div><%= link_to "Add a bookmark",  new_list_bookmark_path(@list[:id]) %></div>
